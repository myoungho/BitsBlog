@model IEnumerable<BitsBlog.Application.DTOs.PostDto>

<h1>게시글 목록</h1>
<a href="/Posts/Create">글쓰기</a>

@if (Model is null || !Model.Any())
{
    <p>게시글이 없습니다.</p>
}
else
{
    <ul>
    @foreach (var post in Model)
    {
        <li>
            <h3>@post.Title (@post.Created.ToLocalTime())</h3>
            <p>@post.Content</p>
            <a href="/Posts/Edit/@post.Id">수정</a>
            <form asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline;margin-left:8px;">
                <button type="submit" onclick="return confirm('삭제하시겠습니까?');">삭제</button>
            </form>
        </li>
    }
    </ul>
}
