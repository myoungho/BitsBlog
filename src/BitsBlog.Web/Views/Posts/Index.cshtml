@model IEnumerable<BitsBlog.Application.DTOs.PostDto>
@{
    ViewData["Title"] = "게시글 목록";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 m-0">게시글 목록</h1>
    <a class="btn btn-primary" href="/Posts/Create">새 글</a>
    </div>

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">게시글이 없습니다.</div>
}
else
{
    <ul class="list-group">
    @foreach (var post in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a class="fw-semibold" asp-action="Details" asp-route-id="@post.Id">@post.Title</a>
            <small class="text-muted">@post.Created.ToLocalTime()</small>
        </li>
    }
    </ul>
}

