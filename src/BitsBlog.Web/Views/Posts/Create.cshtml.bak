@model BitsBlog.Web.Models.CreatePostViewModel
<h1>글쓰기</h1>
<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div>
        <label asp-for="Content"></label>
        <textarea asp-for="Content"></textarea>
    </div>
    <button type="submit">저장</button>
</form>

